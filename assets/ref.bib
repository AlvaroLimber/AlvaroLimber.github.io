@inproceedings{isi15,
    Author = {Chirino, Alvaro},
    Year = {2015},
    Title = {2 Census, 10 years of household surveys in Bolivia. Time to re-weight and define a comparable sample design for Welfare indicators},
    Booktitle = {60th WSC (2015)},
    Address = {Pasadena, CA},
    file = {CPS077-P1-S.pdf},
    abstract = {This paper proposes a sample design for the 2002–2012 period of the household survey series conducted by the National Institute of Statistics of Bolivia. The design aims to achieve optimal sample performance for moderate and extreme poverty indicators at both the departmental (first national sub-unit) and national levels. 
    Two main reasons justify this new design. First, the existing sample designs in the survey series differ in several features, such as stratification, clustering, sampling frame, sample allocation, sample size, and more. These variations hinder a consistent interpretation of the evolution of welfare indicators over the years.
    The second motivation is the significance of the 2012 Census of Population and Housing, which revealed a different population structure compared to previous projections. Following the United Nations 2010 recommendations regarding opportunities presented by new censuses, this is an ideal moment to propose a new design that enables the reweighting of the sample.},
    url={https://isi-web.org/sites/default/files/import/files-2015/CPS077-P1-S.pdf}
}
